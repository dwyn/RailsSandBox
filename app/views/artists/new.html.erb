 <div class="row" style="margin-top: 10px;"> </div>
  <div style="  display: block; margin-right: auto; margin-left: auto; width: 50%" >
    <h4 class="center"> Create Artist! </h4><br>

    <%= form_for @artist do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :bio %>
        <%= f.text_field :bio, placeholder: "Bio", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :location %>
        <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
      </div>

      <div> New Song! </div>
      <div class="form-group">
        <%= f.fields_for :songs do |song| %>

          <%= song.label :song_title %>
          <%= song.text_field :title, placeholder: "Song title", class: "form-control" %>
        <% end %>
      </div>

      <button type="submit" class="btn btn-md btn-primary btn-block">Create Artist!</button>
    <% end %>
  </h3>
</div>