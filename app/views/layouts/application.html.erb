<!DOCTYPE html>
<html>
  <head>
    <title>RailsSandBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">

    <!-- NAVBAR! -->
      <nav class="navbar navbar-dark bg-dark" style="border-radius: 25px; margin-top: 20px; margin-bottom: 20px;">

        <%= link_to "Check out Artists!", artists_path, class: "btn btn-primary" %>

        <% if user_signed_in? %>
        
          <%= link_to 'Sign Out!ðŸ¤“', destroy_user_session_path, method: :delete, class:"btn btn-primary", style:"margin-right: 10px; float: right;"  %>

        <% else %>
 
          <%= link_to 'Sign Up!', new_user_registration_path, class:"btn btn-primary", style:"margin-left: 10px; margin-right: 10px; float: right;" %>

          <%= link_to 'Sign In!', user_session_path, class:"btn btn-primary", style:"margin-left: 10px; float: right;"%>
        
        <% end %>
      </nav>

      <!-- ALERTS! -->
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%#= render partial: "layouts/alerts" %>

      <%= yield %>

    </div>
  </body>
</html>
