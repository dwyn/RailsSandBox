 <div class="row" style="margin-top: 10px;"> </div>
  <div style="  display: block; margin-right: auto; margin-left: auto; width: 50%" >
    <h4 class="center"> Sign Up! </h4><br>

    <%= form_for @user do |f| %>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: "User Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
      </div><br>

      <button type="submit" class="btn btn-md btn-primary btn-block">Create User!</button>
    <% end %>
  </h3>
</div>